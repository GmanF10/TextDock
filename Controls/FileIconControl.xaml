<UserControl x:Class="TextDock.Controls.FileIconControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             Width="64"
             Height="80">
    <Grid>
        <Border x:Name="SelectionHighlight"
                CornerRadius="6"
                Background="#80FFE4B5"
                Opacity="0">
            <Border.Style>
                <Style TargetType="Border">
                    <Setter Property="Opacity" Value="0" />
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsSelected, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                     Value="True">
                            <Setter Property="Opacity" Value="1" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Border.Style>
        </Border>
        <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Margin="4">
            <Border Width="48"
                    Height="48"
                    CornerRadius="6"
                    Background="White"
                    BorderBrush="#708090"
                    BorderThickness="1">
                <TextBlock Text="TXT"
                           Foreground="#2F4F4F"
                           FontWeight="Bold"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center" />
            </Border>
            <TextBlock Text="{Binding FileName, RelativeSource={RelativeSource AncestorType=UserControl}}"
                       TextAlignment="Center"
                       FontSize="10"
                       Foreground="#2F4F4F"
                       Margin="0,6,0,0"
                       TextTrimming="CharacterEllipsis"
                       TextWrapping="NoWrap" />
        </StackPanel>
    </Grid>
</UserControl>
